    }

    .dark .glass-effect {
        background: rgba(55, 65, 81, 0.7);
        border: 1px solid rgba(75, 85, 99, 0.2);
    }

    .animate-fade-in-up {
        animation: fadeInUp 0.6s ease-out forwards;
        opacity: 0;
        transform: translateY(30px);
    }

    @@keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>