@model ScamSentinel.Models.NewsResponse

@{
    ViewData["Title"] = "Scam News";
}

<div class="flex min-h-screen items-center justify-center bg-gradient-to-br from-red-50 via-red-100 to-red-200 px-4 py-14 dark:from-gray-900 dark:via-gray-800 dark:to-red-900">
    <div class="animate-fade-in-up w-full max-w-7xl">
        <h2 class="animate-bounce-slow mb-8 pt-8 text-center text-2xl font-bold text-gray-800 sm:text-3xl dark:text-gray-100">
            Latest Scam News
        </h2>

        @if (Model.Status == "error")
        {
            <div class="animate-fade-in-up rounded-xl bg-red-100 p-4 text-red-700 dark:bg-red-900 dark:text-red-300" style="animation-delay: 0.1s;">
                @Model.ErrorMessage
            </div>
        }
        else if (Model.Articles.Any())
        {
            <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
                @foreach (var article in Model.Articles)
                {
                    <div class="animate-fade-in-up flex flex-col justify-between rounded-xl border border-gray-200 bg-white p-5 shadow-lg dark:border-gray-700 dark:bg-gray-800" style="animation-delay: 0.2s;">
                        <div>
                            <h3 class="mb-2 text-xl font-semibold text-gray-800 dark:text-gray-100">@article.Title</h3>
                            <p class="mb-3 text-sm text-gray-600 dark:text-gray-300">@article.Description</p>
                            <span class="text-xs text-gray-500 dark:text-gray-400">@article.SourceName</span>
                        </div>
                        <div class="mt-4 flex items-center justify-between text-sm text-gray-500 dark:text-gray-400">
                            <span>@article.PublishedAt?.ToString("dd MMM yyyy")</span>
                            <a href="@article.Url" target="_blank"
                               class="inline-flex justify-center rounded-full bg-red-600 px-4 py-2 text-sm font-semibold text-white shadow-md transition-all duration-300 hover:scale-105 hover:bg-red-700 focus:ring-4 focus:ring-red-200 focus:outline-none dark:bg-red-500 dark:hover:bg-red-600 dark:focus:ring-red-800">
                                Read More
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="animate-fade-in-up text-center text-gray-600 dark:text-gray-300" style="animation-delay: 0.1s;">
                No scam news available today.
            </p>
        }
    </div>
</div>