<header class="fixed inset-x-0 top-0 z-50 bg-surface border-b border-app">
    <nav class="flex items-center justify-between p-6 lg:px-8">
        <div class="flex lg:flex-1">
            <a href="/" class="-m-1.5 flex items-center gap-x-4 p-1.5">
                <img src="/Assets/logo.png" alt="Scam Sentinel logo" class="h-8 w-auto animate-rotate-pause" />
                <span class="text-lg font-semibold text-accent">Scam Sentinel</span>
            </a>
        </div>

        <!-- Desktop Nav -->
        <div class="hidden lg:flex lg:gap-x-12 items-center">
            <!-- 🌙 Dark mode toggle -->
            <button id="theme-toggle"
                    class="text-xl"
                    aria-label="Toggle dark mode"
                    data-theme-toggle>🌙</button>

            <a href="#" class="link-btn text-sm font-semibold">Post_Scam</a>
            <a href="#" class="link-btn text-sm font-semibold">All_Scams</a>
            <a href="#" class="link-btn text-sm font-semibold">Help & Info</a>
        </div>

        <!-- Desktop Auth -->
        <div class="hidden lg:flex lg:gap-x-6">
            @if (Context.Request.Cookies["access_token"] != null)
            {
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="link-btn text-sm font-semibold">
                        Logout <span aria-hidden="true">&rarr;</span>
                    </button>
                </form>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="link-btn text-sm font-semibold">
                    Log in
                </a>
                <a asp-controller="Account" asp-action="Register" class="link-btn text-sm font-semibold">
                    Register
                </a>
            }
        </div>
    </nav>

    <!-- Mobile menu (example with theme toggle) -->
    <dialog id="mobile-menu" class="backdrop:bg-black/30 lg:hidden">
        <div tabindex="0" class="fixed inset-0 focus:outline-none">
            <div class="fixed inset-y-0 right-0 z-50 w-full max-w-sm overflow-y-auto bg-surface p-6 shadow-xl">
                <div class="flex items-center justify-between">
                    <a href="#" class="-m-1.5 p-1.5">
                        <span class="sr-only">Scam Sentinel</span>
                        <img src="/Assets/logo.png" alt="Scam Sentinel logo" class="h-8 w-auto" />
                    </a>
                    <button type="button" id="mobile-menu-close" class="-m-2.5 rounded-md p-2.5 text-app">
                        <span class="sr-only">Close menu</span>
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"
                             class="h-6 w-6">
                            <path d="M6 18 18 6M6 6l12 12" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                    </button>
                </div>

                <div class="mt-6 space-y-2">
                    <!-- 🌙 Theme toggle inside mobile menu -->
                    <button class="text-xl" data-theme-toggle>🌙</button>

                    <a href="#" class="block link-btn text-base font-semibold">Post_Scam</a>
                    <a href="#" class="block link-btn text-base font-semibold">All_Scams</a>
                    <a href="#" class="block link-btn text-base font-semibold">Help & Info</a>
                </div>

                <div class="mt-6 border-t border-app pt-6">
                    @if (Context.Request.Cookies["access_token"] != null)
                    {
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="w-full link-btn text-base font-semibold">
                                Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="block link-btn text-base font-semibold">
                            Log in
                        </a>
                        <a asp-controller="Account" asp-action="Register" class="mt-2 block link-btn text-base font-semibold">
                            Register
                        </a>
                    }
                </div>
            </div>
        </div>
    </dialog>
</header>
