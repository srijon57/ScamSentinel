<header class="fixed inset-x-0 top-0 z-50 bg-red-200 dark:bg-gray-800">
    <nav class="flex items-center justify-between p-6 lg:px-8">
        <div class="flex lg:flex-1">
            <a href="/" class="-m-1.5 flex items-center gap-x-4 p-1.5">
                <img src="/Assets/logo.png" alt="Scam Sentinel logo" class="animate-rotate-pause h-8 w-auto" />
                <span class="text-lg font-semibold text-gray-900 dark:text-gray-100">Scam Sentinel</span>
            </a>
        </div>

        <style>
            @@keyframes rotate-and-pause {
                0% {
                    transform: rotate(0deg);
                }

                50% {
                    transform: rotate(360deg);
                }

                100% {
                    transform: rotate(360deg);
                }
            }

            .animate-rotate-pause {
                animation: rotate-and-pause 4s linear infinite;
            }
        </style>

        <div class="flex lg:hidden">
            <button type="button" id="mobile-menu-open" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-red-800 dark:text-red-300">
                <span class="sr-only">Open main menu</span>
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true" class="h-6 w-6">
                    <path d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
            </button>
        </div>

        <div class="hidden pr-9 lg:flex lg:gap-x-12">
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="Account" asp-action="PostScam" class="text-sm font-semibold text-red-900 hover:bg-red-50 dark:text-red-300 dark:hover:bg-gray-700">Post Scam</a>
            }
            <!-- Added Legality Checker link -->
            <a asp-controller="Home" asp-action="Legality" class="text-sm font-semibold text-red-900 hover:bg-red-50 dark:text-red-300 dark:hover:bg-gray-700">Legality Checker</a>
            <a asp-controller="Account" asp-action="ScamList" class="text-sm font-semibold text-red-900 hover:bg-red-50 dark:text-red-300 dark:hover:bg-gray-700">All Scams</a>
            <a asp-controller="News" asp-action="Index" class="text-sm font-semibold text-red-900 hover:bg-red-50 dark:text-red-300 dark:hover:bg-gray-700">Scam News</a>
        </div>

        <div class="hidden lg:flex lg:gap-x-6">
            @if (User.Identity.IsAuthenticated)
            {
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="text-sm font-semibold text-red-900 hover:bg-red-50 dark:text-red-300 dark:hover:bg-gray-700">
                        Logout <span aria-hidden="true">&rarr;</span>
                    </button>
                </form>
                <div class="relative ml-3">
                    <div>
                        <button type="button" id="user-menu-button" class="flex rounded-full bg-gray-800 text-sm focus:ring-2 focus:ring-red-500 focus:ring-offset-2 focus:outline-none dark:focus:ring-offset-gray-800" aria-expanded="false" aria-haspopup="true">
                            <span class="sr-only">Open user menu</span>
                            <!-- Custom Profile Icon -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 rounded-full text-gray-300" viewBox="0 0 48 48">
                                <defs>
                                    <style>
                                        .cls-3 {
                                            fill: #6fabe6
                                        }

                                        .cls-4 {
                                            fill: #82bcf4
                                        }</style>
                                </defs>
                                <g id="User_profile" data-name="User profile">
                                    <path d="M47 24A23 23 0 1 1 12.81 3.91 23 23 0 0 1 47 24z" style="fill:#374f68" />
                                    <path d="M47 24a22.91 22.91 0 0 1-8.81 18.09A22.88 22.88 0 0 1 27 45C5.28 45-4.37 17.34 12.81 3.91A23 23 0 0 1 47 24z" style="fill:#425b72" />
                                    <path class="cls-3" d="M39.2 35.39a19 19 0 0 1-30.4 0 17 17 0 0 1 10.49-8.73 8.93 8.93 0 0 0 9.42 0 17 17 0 0 1 10.49 8.73z" />
                                    <path class="cls-4" d="M39.2 35.39a19 19 0 0 1-4.77 4.49 19 19 0 0 1-15.13-1 7.08 7.08 0 0 1-.51-12.18c.1-.07 0-.05.5-.05a9 9 0 0 0 9.42 0 17 17 0 0 1 10.49 8.74z" />
                                    <path class="cls-3" d="M33 19a9 9 0 1 1-12.38-8.34A9 9 0 0 1 33 19z" />
                                    <path class="cls-4" d="M33 19a9 9 0 0 1-2.6 6.33c-9.13 3.74-16.59-7.86-9.78-14.67A9 9 0 0 1 33 19z" />
                                </g>
                            </svg>
                        </button>
                    </div>
                    <!-- Dropdown Menu -->
                    <div id="user-menu" class="ring-opacity-5 absolute right-0 z-10 mt-2 hidden w-48 origin-top-right rounded-md bg-white py-1 shadow-lg ring-1 ring-black focus:outline-none dark:bg-gray-800 dark:ring-gray-700">
                        <a href="@Url.Action("Profile", "Account")" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700">Profile</a>
                        <a href="@Url.Action("MyPosts", "Account")" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700">My Posts</a>
                    </div>
                </div>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="text-sm font-semibold text-red-900 hover:bg-red-50 dark:text-red-300 dark:hover:bg-gray-700">
                    Log in
                </a>
                <a asp-controller="Account" asp-action="Register" class="text-sm font-semibold text-red-900 hover:bg-red-50 dark:text-red-300 dark:hover:bg-gray-700">
                    Register
                </a>
            }
        </div>

    </nav>

    <dialog id="mobile-menu" class="backdrop:bg-black/30 lg:hidden">
        <div tabindex="0" class="fixed inset-0 focus:outline-none">
            <div class="fixed inset-y-0 right-0 z-50 w-full max-w-sm overflow-y-auto bg-red-200 p-6 shadow-xl dark:bg-gray-800">
                <div class="flex items-center justify-between">
                    <a href="/" class="-m-1.5 p-1.5">
                        <span class="sr-only">Scam Sentinel</span>
                        <img src="/Assets/logo.png" alt="Scam Sentinel logo" class="h-8 w-auto" />
                    </a>
                    <button type="button" id="mobile-menu-close" class="-m-2.5 rounded-md p-2.5 text-red-800 dark:text-red-300">
                        <span class="sr-only">Close menu</span>
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true" class="h-6 w-6">
                            <path d="M6 18 18 6M6 6l12 12" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                    </button>
                </div>

                <div class="mt-6">
                    <nav class="space-y-2">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Account" asp-action="PostScam" class="block rounded-lg px-3 py-2 text-base font-semibold text-red-900 hover:bg-red-50 dark:text-red-300 dark:hover:bg-gray-700">Post Scam</a>
                        }
                        <!-- Added Legality Checker link for mobile -->
                        <a asp-controller="Home" asp-action="Legality" class="block rounded-lg px-3 py-2 text-base font-semibold text-red-900 hover:bg-red-50 dark:text-red-300 dark:hover:bg-gray-700">Legality Checker</a>
                        <a href="/Account/ScamList" class="block rounded-lg px-3 py-2 text-base font-semibold text-red-900 hover:bg-red-50 dark:text-red-300 dark:hover:bg-gray-700">All Scams</a>
                        <a href="/scam-news" class="block rounded-lg px-3 py-2 text-base font-semibold text-red-900 hover:bg-red-50 dark:text-red-300 dark:hover:bg-gray-700">Scam News</a>
                    </nav>

                    <div class="mt-6 border-t border-red-100 pt-6 dark:border-gray-700">
                        @if (Context.Request.Cookies["access_token"] != null)
                        {
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="w-full rounded-lg px-3 py-2.5 text-left text-base font-semibold text-red-900 hover:bg-red-50 dark:text-red-300 dark:hover:bg-gray-700">
                                    Logout
                                </button>
                            </form>
                            <a asp-controller="Account" asp-action="Profile" class="mt-2 block rounded-lg px-3 py-2.5 text-base font-semibold text-red-900 hover:bg-red-50 dark:text-red-300 dark:hover:bg-gray-700">
                                Profile
                            </a>
                            <a asp-controller="Account" asp-action="MyPosts" class="mt-2 block rounded-lg px-3 py-2.5 text-base font-semibold text-red-900 hover:bg-red-50 dark:text-red-300 dark:hover:bg-gray-700">
                                My Posts
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="block rounded-lg px-3 py-2.5 text-base font-semibold text-red-900 hover:bg-red-50 dark:text-red-300 dark:hover:bg-gray-700">
                                Log in
                            </a>
                            <a asp-controller="Account" asp-action="Register" class="mt-2 block rounded-lg px-3 py-2.5 text-base font-semibold text-red-900 hover:bg-red-50 dark:text-red-300 dark:hover:bg-gray-700">
                                Register
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </dialog>
</header>

<script>
    // Simple mobile menu toggle using the native <dialog> element
    const dlg = document.getElementById('mobile-menu');
    const openBtn = document.getElementById('mobile-menu-open');
    const closeBtn = document.getElementById('mobile-menu-close');

    if (openBtn && dlg) {
        openBtn.addEventListener('click', () => {
            if (typeof dlg.showModal === 'function') {
                dlg.showModal();
            } else {
                // Fallback if <dialog> is unsupported
                dlg.setAttribute('open', '');
            }
        });
    }
    if (closeBtn && dlg) {
        closeBtn.addEventListener('click', () => dlg.close ? dlg.close() : dlg.removeAttribute('open'));
    }

    // Close on backdrop click
    if (dlg) {
        dlg.addEventListener('click', (e) => {
            const rect = dlg.getBoundingClientRect();
            const inDialog = (
                e.clientX >= rect.left &&
                e.clientX <= rect.right &&
                e.clientY >= rect.top &&
                e.clientY <= rect.bottom
            );
            if (!inDialog) {
                dlg.close ? dlg.close() : dlg.removeAttribute('open');
            }
        });
    }
    const userMenuButton = document.getElementById('user-menu-button');
    const userMenu = document.getElementById('user-menu');

    userMenuButton.addEventListener('click', () => {
        userMenu.classList.toggle('hidden');
    });

    // Close dropdown when clicking outside
    document.addEventListener('click', (event) => {
        if (!userMenuButton.contains(event.target) && !userMenu.contains(event.target)) {
            userMenu.classList.add('hidden');
        }
    });
</script>