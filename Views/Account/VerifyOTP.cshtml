@model VerifyOTPModel
<div class="flex min-h-screen items-center justify-center bg-gray-100 p-4">
    <div class="w-full max-w-md space-y-6 rounded-xl bg-white p-8 shadow-lg">
        <h2 class="text-center text-2xl font-bold text-gray-800">Verify OTP</h2>
        <form asp-action="VerifyOTP" method="post" class="space-y-4">
            <input type="hidden" asp-for="Email" />
            <div class="form-group">
                <label asp-for="OTPCode" class="block text-sm font-medium text-gray-700">One-Time Password (OTP)</label>
                <input asp-for="OTPCode" class="mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" required />
            </div>
            <button type="submit" class="flex w-full justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                Verify OTP
            </button>
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger rounded-lg bg-red-100 p-3 text-sm text-red-700" role="alert">
                    @Model.ErrorMessage
                </div>
            }
        </form>
    </div>
</div>

