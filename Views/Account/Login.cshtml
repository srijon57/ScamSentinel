@using ScamSentinel.Models.Account
@model LoginModel

@{
    ViewData["Title"] = "Login - ScamSentinel";
}

<link rel="stylesheet" href="/css/login.css" />

<div class="relative min-h-screen bg-gradient-to-br from-red-50 via-red-100 to-red-200 px-4 py-14 dark:from-gray-900 dark:via-gray-800 dark:to-red-900">
    <div class="floating-icons">
        <svg class="floating-icon w-12 h-12 text-red-300" style="top: 10%; left: 10%; animation-delay: 0s;" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2L2 7v10c0 5.55 3.84 9.74 9 11 5.16-1.26 9-5.45 9-11V7l-10-5z" />
        </svg>
        <svg class="floating-icon w-8 h-8 text-red-200" style="top: 20%; right: 15%; animation-delay: 2s;" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zM12 17c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zM15.1 8H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z" />
        </svg>
        <svg class="floating-icon w-10 h-10 text-red-300" style="bottom: 20%; left: 20%; animation-delay: 4s;" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2L2 7v10c0 5.55 3.84 9.74 9 11 5.16-1.26 9-5.45 9-11V7l-10-5z" />
        </svg>
    </div>

    <div class="relative z-10 flex min-h-screen items-center justify-center">
        <div class="animate-fade-in-up w-full max-w-md">
            <div class="mb-8 text-center">
                <div class="security-badge mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full">
                    <svg class="h-8 w-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2L2 7v10c0 5.55 3.84 9.74 9 11 5.16-1.26 9-5.45 9-11V7l-10-5z" />
                    </svg>
                </div>
                <h1 class="animate-bounce-slow text-3xl font-bold text-gray-800 sm:text-4xl dark:text-gray-100">
                    ScamSentinel
                </h1>
                <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
                    Protecting you from digital threats
                </p>
            </div>

            <form asp-action="Login" method="post" class="login-form rounded-2xl p-8 shadow-2xl backdrop-blur-sm sm:p-10">
                <div class="mb-6 text-center">
                    <h2 class="text-xl font-semibold text-gray-800 dark:text-gray-100">
                        Welcome Back
                    </h2>
                    <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
                        Sign in to your secure account
                    </p>
                </div>

                <div class="space-y-6">
                    <div class="animate-fade-in-up input-group" style="animation-delay: 0.1s;">
                        <label for="Email" class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                            Email Address
                        </label>
                        <div class="relative">
                            <svg class="input-icon h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 12.713l-11.985-9.713h23.97l-11.985 9.713zm0 2.574l-12-9.725v15.438h24v-15.438l-12 9.725z" />
                            </svg>
                            <input asp-for="Email" type="email" autocomplete="email"
                                   class="input-with-icon w-full rounded-xl border border-gray-300 py-3 text-sm text-gray-900 transition-all duration-300 outline-none placeholder:text-gray-400 focus:border-red-500 focus:ring-4 focus:ring-red-100 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 dark:placeholder:text-gray-500 dark:focus:border-red-400 dark:focus:ring-red-900"
                                   placeholder="Enter your email"
                                   required />
                        </div>
                        <span asp-validation-for="Email" class="animate-shake mt-2 block text-xs text-red-500 dark:text-red-400"></span>
                    </div>

                    <div class="animate-fade-in-up input-group" style="animation-delay: 0.2s;">
                        <label for="Password" class="mb-2 block text-sm font-medium text-gray-700 dark:text-gray-300">
                            Password
                        </label>
                        <div class="relative">
                            <svg class="input-icon h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zM12 17c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zM15.1 8H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z" />
                            </svg>
                            <input asp-for="Password" type="password" autocomplete="current-password"
                                   class="input-with-icon w-full rounded-xl border border-gray-300 py-3 text-sm text-gray-900 transition-all duration-300 outline-none placeholder:text-gray-400 focus:border-red-500 focus:ring-4 focus:ring-red-100 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 dark:placeholder:text-gray-500 dark:focus:border-red-400 dark:focus:ring-red-900"
                                   placeholder="Enter your password"
                                   required />
                        </div>
                        <span asp-validation-for="Password" class="animate-shake mt-2 block text-xs text-red-500 dark:text-red-400"></span>
                    </div>

                    <div class="animate-fade-in-up flex items-center justify-between text-sm" style="animation-delay: 0.25s;">
                        <label class="flex items-center text-gray-600 dark:text-gray-400">
                            <input type="checkbox" class="mr-2 h-4 w-4 rounded border-gray-300 text-red-600 focus:ring-red-500 dark:border-gray-600 dark:bg-gray-700">
                            Remember me
                        </label>
                        <a href="#" class="text-red-600 transition-colors hover:text-red-700 dark:text-red-400 dark:hover:text-red-300">
                            Forgot password?
                        </a>
                    </div>
                </div>

                <div class="animate-fade-in-up mt-8" style="animation-delay: 0.3s;">
                    <button type="submit"
                            class="group relative w-full overflow-hidden rounded-xl bg-gradient-to-r from-red-600 to-red-700 px-8 py-3.5 text-base font-semibold text-white shadow-lg transition-all duration-300 hover:scale-[1.02] hover:shadow-xl focus:ring-4 focus:ring-red-200 focus:outline-none dark:from-red-500 dark:to-red-600 dark:focus:ring-red-800">
                        <span class="relative z-10 flex items-center justify-center">
                            <svg class="mr-2 h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M10 17l5-5-5-5v10z" />
                            </svg>
                            Sign In Securely
                        </span>
                        <div class="absolute inset-0 bg-gradient-to-r from-red-700 to-red-800 opacity-0 transition-opacity duration-300 group-hover:opacity-100"></div>
                    </button>
                </div>

                <div class="animate-fade-in-up mt-6 rounded-lg bg-red-50 p-3 dark:bg-red-900/20" style="animation-delay: 0.4s;">
                    <div class="flex items-center text-xs text-red-700 dark:text-red-300">
                        <svg class="mr-2 h-4 w-4 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 2L2 7v10c0 5.55 3.84 9.74 9 11 5.16-1.26 9-5.45 9-11V7l-10-5z" />
                        </svg>
                        <span>Your connection is secured with 256-bit SSL encryption</span>
                    </div>
                </div>

                <div class="animate-fade-in-up mt-6 text-center text-sm" style="animation-delay: 0.5s;">
                    <span class="text-gray-600 dark:text-gray-400">Don't have an account? </span>
                    <a href="#" class="font-semibold text-red-600 transition-colors hover:text-red-700 dark:text-red-400 dark:hover:text-red-300">
                        Create one now
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="/js/login.js"></script>
}