@model ChangePasswordModel

<div class="flex min-h-screen items-center justify-center bg-gradient-to-br from-red-50 via-red-100 to-red-200 px-4 py-14 dark:from-gray-900 dark:via-gray-800 dark:to-red-900">
    <div class="animate-fade-in-up w-full max-w-md">
        <div class="rounded-xl border border-gray-200 bg-white p-8 shadow-2xl sm:p-10 dark:border-gray-700 dark:bg-gray-800">
            <h2 class="animate-bounce-slow mb-8 text-center text-2xl font-bold text-gray-800 sm:text-3xl dark:text-gray-100">
                Change Password
            </h2>

            <form asp-action="ChangePassword" method="post" class="space-y-6">
                <div class="animate-fade-in-up" style="animation-delay: 0.1s;">
                    <label asp-for="CurrentPassword" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Current Password</label>
                    <input asp-for="CurrentPassword" type="password"
                           class="mt-1 block w-full rounded-lg border border-gray-300 px-4 py-2.5 text-sm text-gray-900 transition-all duration-300 outline-none focus:border-red-500 focus:ring-4 focus:ring-red-100 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 dark:focus:border-red-400 dark:focus:ring-red-900"
                           required />
                    <span asp-validation-for="CurrentPassword" class="animate-shake mt-1 block text-xs text-red-500 dark:text-red-400"></span>
                </div>

                <div class="animate-fade-in-up" style="animation-delay: 0.2s;">
                    <label asp-for="NewPassword" class="block text-sm font-medium text-gray-700 dark:text-gray-300">New Password</label>
                    <input asp-for="NewPassword" type="password"
                           class="mt-1 block w-full rounded-lg border border-gray-300 px-4 py-2.5 text-sm text-gray-900 transition-all duration-300 outline-none focus:border-red-500 focus:ring-4 focus:ring-red-100 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 dark:focus:border-red-400 dark:focus:ring-red-900"
                           required />
                    <span asp-validation-for="NewPassword" class="animate-shake mt-1 block text-xs text-red-500 dark:text-red-400"></span>
                </div>

                <div class="animate-fade-in-up" style="animation-delay: 0.3s;">
                    <label asp-for="ConfirmNewPassword" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Confirm New Password</label>
                    <input asp-for="ConfirmNewPassword" type="password"
                           class="mt-1 block w-full rounded-lg border border-gray-300 px-4 py-2.5 text-sm text-gray-900 transition-all duration-300 outline-none focus:border-red-500 focus:ring-4 focus:ring-red-100 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 dark:focus:border-red-400 dark:focus:ring-red-900"
                           required />
                    <span asp-validation-for="ConfirmNewPassword" class="animate-shake mt-1 block text-xs text-red-500 dark:text-red-400"></span>
                </div>

                <div class="animate-fade-in-up mt-8 flex justify-center" style="animation-delay: 0.4s;">
                    <button type="submit"
                            class="inline-flex justify-center rounded-full bg-red-600 px-8 py-3 text-base font-semibold text-white shadow-md transition-all duration-300 hover:scale-105 hover:bg-red-700 hover:shadow-lg focus:ring-4 focus:ring-red-200 focus:outline-none dark:bg-red-500 dark:hover:bg-red-600 dark:focus:ring-red-800">
                        Change Password
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>